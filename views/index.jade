extends layout

block content
    p We help you teach others :)
    style.
        #editor { 
            width: 800px;
            height: 500px;
            border-radius: 10px;
        }
        .ace_content {
            padding-top: 10px; 
        }
        .ace_gutter {
            padding-top: 10px; 
        }
    #editor.
        function foo(items) {
            var x = "All this is syntax highlighted";
            return x;
        }
    script(src='//cdnjs.cloudflare.com/ajax/libs/ace/1.1.3/ace.js')
    script(src='//cdnjs.cloudflare.com/ajax/libs/ace/1.1.3/theme-monokai.js')
    script(src='//cdnjs.cloudflare.com/ajax/libs/ace/1.1.3/mode-javascript.js')
    script(type='text/javascript').
        var editor = ace.edit("editor");
        editor.setTheme("ace/theme/monokai");
        editor.getSession().setMode("ace/mode/javascript");
